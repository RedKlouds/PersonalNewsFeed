<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Signal"
        android:id="@+id/finviz_signal"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Symbol"
        android:id="@+id/finviz_symbol"
        android:layout_marginEnd="43dp"
        android:layout_above="@+id/finviz_volume"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volume"
        android:id="@+id/finviz_volume"
        android:layout_below="@+id/finviz_signal"
        android:layout_alignStart="@+id/finviz_signal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change"
        android:id="@+id/finviz_change"
        android:layout_below="@+id/finviz_symbol"
        android:layout_alignStart="@+id/finviz_symbol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price"
        android:id="@+id/finviz_price"
        android:layout_below="@+id/finviz_volume"
        android:layout_alignStart="@+id/finviz_volume" />
</RelativeLayout>